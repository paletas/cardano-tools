{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "Kestrel": {
    "EndpointDefaults": {
      "Protocols": "Http2"
    }
  },
  "ConnectionStrings": {
    "cardano-db-sync": "Host=${POSTGRES_SERVER:-localhost};Database=${POSTGRES_DB:-$(< ''${SECRET_DIR:-/run/secrets}/postgres_db)};Username=${POSTGRES_USER:-$(< ''${SECRET_DIR:-/run/secrets}/postgres_user)};Password=${POSTGRES_PASSWORD:-$(< ''${SECRET_DIR:-/run/secrets}/postgres_password)};"
  }
}
